generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Author {
  id        String   @id @default(uuid())
  name      String   @unique
  lifeSpan  String?
  works     Work[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Work {
  id        String   @id @default(uuid())
  title     String
  year      Int
  author    Author   @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
